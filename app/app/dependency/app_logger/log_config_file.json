{
    "version":1,
    "disable_existing_loggers":false,
    "formatters":{
        "detailed":{
            "class":"logging.Formatter",
            "format":"%(asctime)s: %(levelname)s: (%(name)s:%(module)s:%(funcName)s): %(message)s"
        }
    },
    "handlers":{
        "rotate_file":{
            "class":"app.dependency.app_logger.LogFileRotatorCompressor.RotatorCompressorHandler",
            "filename":"/app/log/app.log",
            "maxBytes":100000000,
            "backupCount":5,
            "formatter":"detailed"
        }
    },
    "loggers":{
        "uvicorn":{
            "handlers":[
                "rotate_file"
            ],
            "level":"DEBUG"
        },
        "api_service":{
            "handlers":[
                "rotate_file"
            ],
            "level":"DEBUG"
        }
    }
    
}